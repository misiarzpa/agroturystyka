<h1>Listing rooms</h1>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Price</th>
      <th>Number</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td> <%= image_tag(room.avatar_url, :width => 200) if room.avatar.present? %></td>
        <td><%= room.price %></td>
        <td><%= room.number %></td>
        <td><%= room.description %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
